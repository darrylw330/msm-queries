<h1>Director #<%= @the_actor.id %> details</h1>

<a href="/actor">Go back</a>

<hr>

<dl>
  <dt>Name</dt>
  <dd><%= @the_actor.name %></dd>

  <dt>Dob</dt>
  <dd><%= @the_actor.dob %></dd>

  <dt>Bio</dt>
  <dd><%= @the_actor.bio %></dd>

  <dt>Image</dt>
  <dd><img src="<%= @the_actor.image %>" width="200"></dd>

  <dt>Created at</dt>
  <dd><%= @the_actor.created_at %></dd>

  <dt>Updated at</dt>
  <dd><%= @the_actor.updated_at %></dd>
</dl>

<h2>Filmography</h2>

<% matching_movies = Movie.where({ :director_id => @the_actor.id}) %>
<ul>
<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </tr>

  <% matching_movies.each do |a_movie| %>
      <tr>
    <td><%= a_movie.id %></td>
    <td><img src="<%= a_movie.image %>" width="50"></td>
    <td><%= a_movie.title %></td>
    <td><%= a_movie.year %></td>
    <td><%= @the_actor.name %></td>
    <td>
      <a href="/movies/<%= a_movie.id %>">Show details</a>
    </td>
  </tr>
  <% end %>
</ul>
</table>
